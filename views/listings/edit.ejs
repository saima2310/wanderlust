<%= layout('/layouts/boilerplate') %>

<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h2>Edit Your Listing</h2>
      <form
        method="post"
        action="/listings/<%= listing._id %>?_method=PUT"
        class="needs-validation"
        noValidate
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>

          <input
            id="title"
            class="form-control"
            type="text"
            name="listing[title]"
            value="<%= listing.title %>"
            required
          />
          <div class="invalid-feedback">Please Enter A Valid title</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>

          <textarea
            class="form-control"
            name="listing[description]"
            value="<%= listing.description %>"
            id="description"
            cols="30"
            rows="10"
            required
          >
<%= listing.description %></textarea
          >
          <div class="invalid-feedback">Please Enter A Short Description</div>
        </div>

        <div class="mb-3">
          <h5>Original Image</h5>
          
          <img src="<%= originalImageUrl %>" alt="" />
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Upload New Image</label>

          <input class="form-control" type="file" name="listing[image]" />
          <div class="invalid-feedback">Please Enter A Valid Link</div>
        </div>

        <div class="mb-3">
          <label for="price" class="form-label">Price</label>

          <input
            class="form-control"
            id="price"
            type="text"
            name="listing[price]"
            value="<%= listing.price %>"
            type="number"
            required
          />
          <div class="invalid-feedback">Please Enter A Valid Price</div>
        </div>

        <div class="mb-3">
          <label for="country" class="form-label">Title</label>

          <input
            class="form-control"
            id="country"
            type="text"
            name="listing[country]"
            value="<%= listing.country %>"
            required
          />
          <div class="invalid-feedback">Please Enter A Valid Country</div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>

          <input
            class="form-control"
            id="location"
            type="text"
            name="listing[location]"
            value="<%= listing.location %>"
            required
          />
          <div class="invalid-feedback">Please Enter A Valid Location</div>
        </div>

        <button class="btn btn-dark mb-3 add-btn">Edit</button>
      </form>
    </div>
  </div>
</body>
